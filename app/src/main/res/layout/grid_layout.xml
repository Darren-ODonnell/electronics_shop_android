            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_column="0"
            app:layout_columnWeight="3"
            app:layout_row="4"
            app:layout_rowWeight="5" />

        <TextView
